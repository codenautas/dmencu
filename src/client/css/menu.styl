  background-size  12px 12px 
td[my-mandatory=optativo]:empty
  background url("../img/optativo.png") top right no-repeat
  background-size  12px 12px 

.svg-acciones
  height 10px
  width 10px
  margin-left 2px

.boton-accion
  cursor pointer
  border-radius 0.25rem

.boton-accion-avance
  color #fff
  background-color #007bff
  border-color #007bff
  .svg-acciones
    fill #fff

.boton-accion-retroceso
  color #212529
  background-color #ffc107
  border-color #ffc107
  .svg-acciones
    fill #212529